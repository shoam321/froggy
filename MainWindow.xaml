<Window x:Class="BluetoothWidget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:BluetoothWidget.Controls"
        Title="Froggy.exe" 
        Icon="Assets/logo.jpg"
        Height="480" 
        Width="400"
        MinHeight="350"
        MinWidth="360"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
    </Window.Resources>
    
    <!-- Root Grid to layer video splash over main content -->
    <Grid>
        <!-- Main container - fills window, no Viewbox -->
        <Border x:Name="OuterBorder" 
                CornerRadius="12" 
                BorderThickness="2"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}">
        
        <!-- Inner border for Windows 95 double-border effect -->
        <Border x:Name="MainBorder" 
                CornerRadius="10" 
                BorderThickness="2"
                Margin="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource SurfaceBrush}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar - Windows 95 style for PIXEL, sleek for RETRO -->
            <Border x:Name="TitleBar" Grid.Row="0" CornerRadius="10,10,0,0" Padding="14,12"
                    Background="{DynamicResource TitleBarBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Always-visible title (does not compete with buttons for width) -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Logo - circular with clip -->
                        <Border Width="40" Height="40" Margin="0,0,10,0" VerticalAlignment="Center"
                                CornerRadius="20" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="2">
                            <Border.Clip>
                                <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                            </Border.Clip>
                            <Grid>
                                <Image x:Name="LogoImage" 
                                       Source="Assets/logo.jpg" 
                                       Width="40" 
                                       Height="40"
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock x:Name="LogoFallback" 
                                           Text="ðŸ¸" 
                                           FontSize="26" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="TitleText" 
                                   Text="Froggy.exe" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Cursor="Help">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <StackPanel MaxWidth="280">
                                        <TextBlock Text="What is Froggy?" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                        <TextBlock TextWrapping="Wrap" FontSize="12">
Froggy is a desktop widget that monitors your Bluetooth devices' battery levels in real-time.

Features:
â€¢ See battery % for headphones, mice, keyboards
â€¢ Battery drain rate tracking
â€¢ Network speed monitor
â€¢ 4 custom themes
â€¢ Snaps to screen edges
â€¢ Rolling champion quotes

Right-click devices to rename them!
                                        </TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                        <!-- Buttons row (can wrap if window is narrow; title stays visible) -->
                        <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <!-- Help/Info Button -->
                        <Button x:Name="HelpButton"
                            Content="?"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="HelpButton_Click"
                            ToolTip="What is Froggy?" />

                        <!-- Text Size Button -->
                        <Button x:Name="TextSizeButton"
                            Content="A"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="14"
                            FontWeight="Bold"
                            Click="TextSizeButton_Click"
                            ToolTip="Change Text Size (Small/Medium/Large)" />

                        <!-- Theme Toggle Button with right-click selection menu -->
                        <Button x:Name="ThemeButton"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="16"
                            Click="ThemeButton_Click"
                            ToolTip="Switch Theme">
                            <Button.Content>ðŸŽ¨</Button.Content>
                            <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Retro" Tag="Retro" Click="ThemeMenuItem_Click" />
                                <MenuItem Header="Pixel" Tag="Pixel" Click="ThemeMenuItem_Click" />
                                <MenuItem Header="NeonDrift" Tag="NeonDrift" Click="ThemeMenuItem_Click" />
                                <MenuItem Header="Moss" Tag="Moss" Click="ThemeMenuItem_Click" />
                                <MenuItem Header="Aurora" Tag="Aurora" Click="ThemeMenuItem_Click" />
                                <!-- Kenney removed -->
                            </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <!-- Pin/Always on Top Button -->
                        <Button x:Name="PinButton"
                            Content="ðŸ“Œ"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="14"
                            Click="PinButton_Click"
                            ToolTip="Pin on top" />

                        <Button Content="â†»"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="RefreshButton_Click"
                            ToolTip="Refresh" />

                        <Button Content="â€”"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize" />

                        <Button Content="âœ•"
                            Width="36"
                            Height="36"
                            FontSize="16"
                            Click="CloseButton_Click"
                            ToolTip="Close" />
                        </WrapPanel>
                </Grid>
            </Border>

            <!-- Device List -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="12"
                         Background="Transparent">
                <Grid>
                    <!-- Loading indicator container - separate from device list -->
                    <StackPanel x:Name="LoadingPanel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Visibility="Collapsed">

                        <!-- High-contrast status pill (inverted vs theme background) -->
                        <Border Background="{DynamicResource TextBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="14,12"
                                MaxWidth="320"
                                HorizontalAlignment="Center">
                            <StackPanel>
                                <!-- Simple spinning ring animation -->
                                <Grid Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,14">
                                    <Ellipse Stroke="{DynamicResource BorderBrush}" StrokeThickness="4" Opacity="0.35"/>
                                    <Ellipse x:Name="SpinnerArc" 
                                             Stroke="{DynamicResource PrimaryBrush}" 
                                             StrokeThickness="4"
                                             StrokeDashArray="2 4"
                                             RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>

                                <TextBlock x:Name="LoadingText"
                                           Text="Finding devices..."
                                           Foreground="{DynamicResource BackgroundBrush}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Device cards go here -->
                    <StackPanel x:Name="DeviceListPanel"/>
                    
                    <!-- Animated Mascot - put any GIF in Assets/mascot.gif -->
                    <Image x:Name="MascotImage"
                           Width="80" Height="80"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,10,10,0"
                           Visibility="Collapsed"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </Grid>
            </ScrollViewer>

            <!-- Network Speed Panel -->
            <Border x:Name="NetworkPanel" Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,2,0,0"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ“¶" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="NetworkSpeedText"
                                   Text="â†“ 0 Mbps  â†‘ 0 Mbps"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock x:Name="PingText"
                                       Text="Ping: --ms"
                                       FontSize="14"
                                       Foreground="{DynamicResource SubTextBrush}"/>
                            <TextBlock Text=" | " FontSize="14" Foreground="{DynamicResource SubTextBrush}"/>
                            <TextBlock x:Name="NetworkNameText"
                                       Text="WiFi"
                                       FontSize="14"
                                       Foreground="{DynamicResource SubTextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer / Rolling Quotes -->
            <Border x:Name="FooterBorder" Grid.Row="3" 
                    CornerRadius="0,0,8,8" 
                    Padding="0,8"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,2,0,0"
                    ClipToBounds="True">
                <Canvas x:Name="MarqueeCanvas" Height="22">
                    <TextBlock x:Name="MarqueeText"
                               Text="â˜€ï¸ The dawn has arrived! â˜€ï¸"
                               FontSize="14"
                               FontWeight="SemiBold"
                               FontStyle="Italic"
                               Foreground="{DynamicResource AccentBrush}"
                               Canvas.Top="2"/>
                </Canvas>
            </Border>
        </Grid>
        </Border>
    </Border>
    
        <!-- Fixed Resize Grip - in corner of window -->
        <Thumb x:Name="ResizeGrip"
               Width="16" 
               Height="16"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Cursor="SizeNWSE"
               DragDelta="ResizeGrip_DragDelta"
               Panel.ZIndex="50">
            <Thumb.Template>
                <ControlTemplate>
                    <Grid Background="Transparent">
                        <!-- Resize grip dots pattern -->
                        <Canvas Width="16" Height="16">
                            <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="5" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="10" Canvas.Top="5" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="0" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                            <Ellipse Canvas.Left="10" Canvas.Top="0" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                            <Ellipse Canvas.Left="5" Canvas.Top="5" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    
        <!-- Video Splash Overlay -->
        <Border x:Name="VideoSplashOverlay" 
                Background="#000000"
            Visibility="Collapsed"
                Panel.ZIndex="100">
            <Grid>
                <MediaElement x:Name="SplashVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              Stretch="Uniform"
                              MediaEnded="SplashVideo_MediaEnded"
                              MediaFailed="SplashVideo_MediaFailed"/>
                
                <!-- Skip button -->
                <Button x:Name="SkipButton"
                        Content="Skip â–¶"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,20"
                        Padding="20,8"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#333333"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="SkipButton_Click"
                        Opacity="0.9"/>
            </Grid>
        </Border>
    </Grid>
</Window>
