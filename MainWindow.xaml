<Window x:Class="BluetoothWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Froggy.exe" 
        Icon="Assets/logo.jpg"
        Height="480" 
        Width="400"
        MinHeight="350"
        MinWidth="360"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Glow effects for RETRO theme -->
        <DropShadowEffect x:Key="GlowEffect" 
                          Color="#00FFFF" 
                          BlurRadius="12" 
                          ShadowDepth="0" 
                          Opacity="0.3"/>
        
        <DropShadowEffect x:Key="HoverGlowEffect" 
                          Color="#00FFFF" 
                          BlurRadius="20" 
                          ShadowDepth="0" 
                          Opacity="0.6"/>

        <!-- Device card style - adapts to theme -->
        <Style x:Key="DeviceItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Button style - adapts to theme -->
        <Style x:Key="ThemedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <!-- Root Grid to layer video splash over main content -->
    <Grid>
        <!-- Main container - fills window, no Viewbox -->
        <Border x:Name="OuterBorder" 
                CornerRadius="12" 
                BorderThickness="2"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}">
        
        <!-- Inner border for Windows 95 double-border effect -->
        <Border x:Name="MainBorder" 
                CornerRadius="10" 
                BorderThickness="2"
                Margin="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource SurfaceBrush}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar - Windows 95 style for PIXEL, sleek for RETRO -->
            <Border x:Name="TitleBar" Grid.Row="0" CornerRadius="10,10,0,0" Padding="14,12"
                    Background="{DynamicResource TitleBarBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/> <!-- Help button -->
                        <ColumnDefinition Width="Auto"/> <!-- Text Size button -->
                        <ColumnDefinition Width="Auto"/> <!-- Theme button -->
                        <ColumnDefinition Width="Auto"/> <!-- Pin button -->
                        <ColumnDefinition Width="Auto"/> <!-- Refresh button -->
                        <ColumnDefinition Width="Auto"/> <!-- Minimize button -->
                        <ColumnDefinition Width="Auto"/> <!-- Close button -->
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Logo - circular with clip -->
                        <Border Width="40" Height="40" Margin="0,0,10,0" VerticalAlignment="Center"
                                CornerRadius="20" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="2">
                            <Border.Clip>
                                <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                            </Border.Clip>
                            <Grid>
                                <Image x:Name="LogoImage" 
                                       Source="Assets/logo.jpg" 
                                       Width="40" 
                                       Height="40"
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock x:Name="LogoFallback" 
                                           Text="ðŸ¸" 
                                           FontSize="26" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="TitleText" 
                                   Text="Froggy.exe" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Cursor="Help">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <StackPanel MaxWidth="280">
                                        <TextBlock Text="What is Froggy?" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                        <TextBlock TextWrapping="Wrap" FontSize="12">
Froggy is a desktop widget that monitors your Bluetooth devices' battery levels in real-time.

Features:
â€¢ See battery % for headphones, mice, keyboards
â€¢ Battery drain rate tracking
â€¢ Network speed monitor
â€¢ 4 custom themes
â€¢ Snaps to screen edges
â€¢ Rolling champion quotes

Right-click devices to rename them!
                                        </TextBlock>
                                    </StackPanel>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <!-- Help/Info Button -->
                    <Button x:Name="HelpButton"
                            Grid.Column="1"
                            Content="?"
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="HelpButton_Click"
                            ToolTip="What is Froggy?"/>

                    <!-- Text Size Button -->
                    <Button x:Name="TextSizeButton"
                            Grid.Column="2"
                            Content="A"
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="14"
                            FontWeight="Bold"
                            Click="TextSizeButton_Click"
                            ToolTip="Change Text Size (Small/Medium/Large)"/>

                    <!-- Theme Toggle Button -->
                    <Button x:Name="ThemeButton"
                            Grid.Column="3" 
                            Content="ðŸŽ¨" 
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="16"
                            Click="ThemeButton_Click"
                            ToolTip="Switch Theme"/>

                    <!-- Pin/Always on Top Button -->
                    <Button x:Name="PinButton"
                            Grid.Column="4" 
                            Content="ðŸ“Œ" 
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="14"
                            Click="PinButton_Click"
                            ToolTip="Pin on top"/>

                    <Button Grid.Column="5" 
                            Content="â†»" 
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="RefreshButton_Click"
                            ToolTip="Refresh"/>

                    <Button Grid.Column="6" 
                            Content="â€”" 
                            Width="36" 
                            Height="36"
                            Margin="0,0,8,0"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"/>

                    <Button Grid.Column="7" 
                            Content="âœ•" 
                            Width="36" 
                            Height="36"
                            Style="{StaticResource ThemedButtonStyle}"
                            FontSize="16"
                            Click="CloseButton_Click"
                            ToolTip="Close"/>
                </Grid>
            </Border>

            <!-- Device List -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="12"
                         Background="Transparent">
                <Grid>
                    <!-- Loading indicator container - separate from device list -->
                    <StackPanel x:Name="LoadingPanel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Visibility="Collapsed">
                        
                        <!-- Simple spinning ring animation -->
                        <Grid Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Ellipse Stroke="{DynamicResource BorderBrush}" StrokeThickness="4" Opacity="0.3"/>
                            <Ellipse x:Name="SpinnerArc" 
                                     Stroke="{DynamicResource PrimaryBrush}" 
                                     StrokeThickness="4"
                                     StrokeDashArray="2 4"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        
                        <TextBlock x:Name="LoadingText"
                                   Text="Finding devices..."
                                   Foreground="{DynamicResource TextBrush}"
                                   HorizontalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Opacity="0.8"/>
                    </StackPanel>
                    
                    <!-- Device cards go here -->
                    <StackPanel x:Name="DeviceListPanel"/>
                    
                    <!-- Animated Mascot - put any GIF in Assets/mascot.gif -->
                    <Image x:Name="MascotImage"
                           Width="80" Height="80"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,10,10,0"
                           Visibility="Collapsed"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                </Grid>
            </ScrollViewer>

            <!-- Network Speed Panel -->
            <Border x:Name="NetworkPanel" Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,2,0,0"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ“¶" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="NetworkSpeedText"
                                   Text="â†“ 0 Mbps  â†‘ 0 Mbps"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock x:Name="PingText"
                                       Text="Ping: --ms"
                                       FontSize="14"
                                       Foreground="{DynamicResource SubTextBrush}"/>
                            <TextBlock Text=" | " FontSize="14" Foreground="{DynamicResource SubTextBrush}"/>
                            <TextBlock x:Name="NetworkNameText"
                                       Text="WiFi"
                                       FontSize="14"
                                       Foreground="{DynamicResource SubTextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer / Rolling Quotes -->
            <Border x:Name="FooterBorder" Grid.Row="3" 
                    CornerRadius="0,0,8,8" 
                    Padding="0,8"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,2,0,0"
                    ClipToBounds="True">
                <Canvas x:Name="MarqueeCanvas" Height="22">
                    <TextBlock x:Name="MarqueeText"
                               Text="â˜€ï¸ The dawn has arrived! â˜€ï¸"
                               FontSize="14"
                               FontWeight="SemiBold"
                               FontStyle="Italic"
                               Foreground="{DynamicResource AccentBrush}"
                               Canvas.Top="2"/>
                </Canvas>
            </Border>
        </Grid>
        </Border>
    </Border>
    
        <!-- Fixed Resize Grip - in corner of window -->
        <Thumb x:Name="ResizeGrip"
               Width="16" 
               Height="16"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Cursor="SizeNWSE"
               DragDelta="ResizeGrip_DragDelta"
               Panel.ZIndex="50">
            <Thumb.Template>
                <ControlTemplate>
                    <Grid Background="Transparent">
                        <!-- Resize grip dots pattern -->
                        <Canvas Width="16" Height="16">
                            <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="5" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="10" Canvas.Top="5" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.6"/>
                            <Ellipse Canvas.Left="0" Canvas.Top="10" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                            <Ellipse Canvas.Left="10" Canvas.Top="0" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                            <Ellipse Canvas.Left="5" Canvas.Top="5" Width="3" Height="3" 
                                     Fill="{DynamicResource SubTextBrush}" Opacity="0.4"/>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    
        <!-- Video Splash Overlay -->
        <Border x:Name="VideoSplashOverlay" 
                Background="#000000"
                Visibility="Visible"
                Panel.ZIndex="100">
            <Grid>
                <MediaElement x:Name="SplashVideo"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              Stretch="Uniform"
                              MediaEnded="SplashVideo_MediaEnded"
                              MediaFailed="SplashVideo_MediaFailed"/>
                
                <!-- Skip button -->
                <Button x:Name="SkipButton"
                        Content="Skip â–¶"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,20"
                        Padding="20,8"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#333333"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="SkipButton_Click"
                        Opacity="0.9"/>
            </Grid>
        </Border>
    </Grid>
</Window>
