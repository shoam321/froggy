<UserControl
    x:Class="BluetoothWidget.Controls.GlowingBatteryRing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Width="80" Height="80">
        <!-- Glow Effect Layer -->
        <Ellipse x:Name="GlowEllipse"
                 Width="76" Height="76"
                 Opacity="0.4">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop x:Name="GlowColor" Color="#4CAF50" Offset="0.5"/>
                    <GradientStop Color="Transparent" Offset="1.0"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Background Ring (track) -->
        <Ellipse Width="70" Height="70" 
                 StrokeThickness="6"
                 Stroke="#1A1A1A"
                 Fill="Transparent"/>

        <!-- Progress Ring Arc -->
        <Path x:Name="ProgressArc"
              StrokeThickness="6"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round">
            <Path.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GradientStart" Color="#4CAF50" Offset="0.0"/>
                    <GradientStop x:Name="GradientEnd" Color="#8BC34A" Offset="1.0"/>
                </LinearGradientBrush>
            </Path.Stroke>
        </Path>

        <!-- Battery Percentage Text -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="PercentageText"
                       Text="100%"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="TimeRemainingText"
                       Text=""
                       FontSize="9"
                       Foreground="#64B5F6"
                       HorizontalAlignment="Center"
                       Opacity="0.9"/>
        </StackPanel>
    </Grid>
</UserControl>
