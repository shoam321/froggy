<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BluetoothWidget.Controls">

    <Style TargetType="local:BatteryRing">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BatteryRing">
                    <Grid>
                        <!-- Background circle -->
                        <Ellipse x:Name="PART_Background"
                                 Stroke="{ThemeResource TextFillColorSecondaryBrush}"
                                 StrokeThickness="6"
                                 Opacity="0.15"/>
                        
                        <!-- Arc for battery level -->
                        <Path x:Name="PART_Arc"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
